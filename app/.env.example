OPENAI_API_KEY=<string>

# Optional: choose provider ("openai" or "gemini"). Defaults to openai.
LLM_PROVIDER=openai

# Optional: override default model choices (provider-agnostic).
# LLM_MODEL maps to the "large" model; LLM_SMALL_MODEL maps to the fast/cheap model.
# OpenAI choices: gpt-5.2, gpt-5, gpt-5-mini, gpt-4o, gpt-4.1
# Gemini choices: gemini-3-pro-preview, gemini-3-flash-preview, gemini-2.5-pro, gemini-2.5-flash
LLM_MODEL=gpt-5
LLM_SMALL_MODEL=gpt-5-mini

# Optional: OpenAI-only overrides (used when LLM_PROVIDER=openai).
OPENAI_MODEL=gpt-5.2
OPENAI_SMALL_MODEL=gpt-5-mini

# Optional: Gemini configuration (used when LLM_PROVIDER=gemini).
# GEMINI_USE_VERTEX=0 uses API key (no gcloud/service account).
# GEMINI_USE_VERTEX=1 uses Vertex (project/location + ADC).
GEMINI_API_KEY=<string>
GEMINI_USE_VERTEX=0
GEMINI_PROJECT_ID=<string>
GEMINI_LOCATION=us-west4
GEMINI_MODEL=gemini-2.5-pro
GEMINI_SMALL_MODEL=gemini-2.5-flash
